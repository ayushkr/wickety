            android:text="1" />

        <Button
            android:id="@+id/button_this_over_7"
            android:layout_width="@dimen/thisOverBall"
            android:layout_height="wrap_content"

            android:text="1" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/wideEtc"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"

        android:clipToPadding="false"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/wide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="wide" />

        <CheckBox
            android:id="@+id/wide2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No Ball" />

        <CheckBox
            android:id="@+id/wide5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Byes" />

        <CheckBox
            android:id="@+id/wide3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Leg Byes" />

        <CheckBox
            android:id="@+id/wide4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wicket" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/retire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/button27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Retire" />

        <Button
            android:id="@+id/button28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Swap BatsMan" />
    </LinearLayout>

