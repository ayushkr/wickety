        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="This Over" />

        <Button
            android:id="@+id/button_this_over_1"
            android:layout_width="@dimen/thisOverBall"
            android:layout_height="wrap_content"

            android:text="1" />

        <Button
            android:id="@+id/button_this_over_2"
